        // ============================================================================
        // Initialization
        // ============================================================================

        document.addEventListener('DOMContentLoaded', () => {
            loadAndDisplayApps();
        });

        async function loadAndDisplayApps() {
            const loadingElement = document.getElementById('loading');
            const grid = document.getElementById('apps-grid');
            loadingElement.style.display = 'block';
            grid.style.display = 'none';

            try {
                const response = await fetch('appsdata.json');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                allAppsData = await response.json();
                
                setupEventListeners();
                setLanguage(currentLang, true);

            } catch (error) {
                console.error('‚ùå Error loading or rendering apps:', error);
                grid.innerHTML = '<p style="color: white; text-align: center;">Could not load apps. Please try again later.</p>';
            } finally {
                loadingElement.style.display = 'none';
                if (document.querySelector('.app-card')) {
                    grid.style.display = 'grid';
                }
            }
        }
        
        function setLanguage(lang, isInitial = false) {
            currentLang = lang;
            
            document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(`lang-${lang}`).classList.add('active');

            document.documentElement.lang = lang;
            document.documentElement.dir = lang === 'ar' ? 'rtl' : 'ltr';

            updateStaticText(lang);
            renderApps(allAppsData, lang);
            
            initializeApps();
            updateStats();
            checkInstalledApps();
            animateOnScroll();
        }

        function updateStaticText(lang) {
            const t = translations[lang];
            document.querySelector('.header h1').innerHTML = `<img src="baggi_emoji2.png" class="custom-emoji right-spacer" alt="Baggi Symbol"> ${t.title}`;
            document.querySelector('.header p').textContent = t.subtitle;
            document.getElementById('search').placeholder = t.searchPlaceholder;
            
            document.querySelector('[data-category="all"]').textContent = t.allApps;
            document.querySelector('[data-category="productivity"]').innerHTML = t.productivity;
            document.querySelector('[data-category="games"]').innerHTML = t.games;
            document.querySelector('[data-category="utilities"]').innerHTML = t.utilities;
            document.querySelector('[data-category="creative"]').innerHTML = t.creative;

            document.querySelector('#total-apps + .stat-label').textContent = t.totalApps;
            document.querySelector('#installed-apps + .stat-label').textContent = t.installed;
            document.querySelector('#visible-apps + .stat-label').textContent = t.showing;
            
            document.querySelector('#loading p').textContent = t.loading;
            document.querySelector('#empty-state h2').textContent = t.noAppsFound;
            document.querySelector('#empty-state p').textContent = t.noAppsFoundDesc;

            const footer = document.querySelector('.footer');
            footer.querySelector('p:first-child').textContent = t.pwaBenefit;
            footer.querySelector('p:nth-child(2)').innerHTML = t.pwaFeatures;
            footer.querySelector('.footer-link[href*="github"]').innerHTML = t.viewSource;
            footer.querySelector('.footer-link[onclick*="showAbout"]').innerHTML = t.aboutPwas;
            footer.querySelector('.footer-link[onclick*="shareCollection"]').innerHTML = t.shareCollection;
            footer.querySelector('p:last-of-type').innerHTML = t.madeBy;
        }

        function renderApps(appsData, lang) {
            const grid = document.getElementById('apps-grid');
            grid.innerHTML = ''; // Clear existing content
            const t = translations[lang];

            appsData.forEach(app => {
                const name = app[`name-${lang}`] || app.name;
                const description = app[`description-${lang}`] || app.description;
                const categoryName = app[`category-${lang}`] || app.category;
                const keywords = app[`keywords-${lang}`] || app.keywords;

                const newBadgeHtml = app.badges && app.badges.includes('new') 
                    ? `<span class="app-badge new">${t.newBadge}</span>`
                    : '';
                
                const categoryNameDisplay = categoryName.charAt(0).toUpperCase() + categoryName.slice(1);

                const cardHtml = `
                    <a href="${app.href}" class="app-card" data-category="${app.category}" data-keywords="${keywords}">
                        <div class="app-icon">${app.icon}</div>
                        <div class="app-name">${name}</div>
                        <div class="app-description">${description}</div>
                        <div class="app-badges">
                            <span class="app-badge" data-install-status>
                                ${t.installAvailable}
                            </span>
                            ${newBadgeHtml}
                        </div>
                        <span class="app-category-badge">${categoryNameDisplay}</span>
                    </a>
                `;
                grid.innerHTML += cardHtml;
            });
        }

        // ============================================================================
        // App Initialization
        // ============================================================================

        function initializeApps() {
            // Get all app cards
            allApps = Array.from(document.querySelectorAll('.app-card'));
            
            // Update total apps count
            document.getElementById('total-apps').textContent = allApps.length;
            document.getElementById('visible-apps').textContent = allApps.length;
            
            console.log(`‚úÖ Initialized ${allApps.length} apps`);
        }

        // ============================================================================
        // Event Listeners
        // ============================================================================

        function setupEventListeners() {
            // Language switcher
            document.getElementById('lang-en').addEventListener('click', () => setLanguage('en'));
            document.getElementById('lang-ar').addEventListener('click', () => setLanguage('ar'));
            document.getElementById('lang-toggle').addEventListener('click', () => {
                const newLang = currentLang === 'en' ? 'ar' : 'en';
                setLanguage(newLang);
            });

            // Search functionality with debouncing
            const searchInput = document.getElementById('search');
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    handleSearch(e.target.value);
                }, config.debounceDelay);
            });

            // Category filters
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    handleCategoryClick(btn);
                });
            });

            // App card click tracking
            document.getElementById('apps-grid').addEventListener('click', (e) => {
                const card = e.target.closest('.app-card');
                if (card) {
                    const appName = card.querySelector('.app-name').textContent;
                    console.log(`üì± Opening app: ${appName}`);
                    trackEvent('app_click', { app_name: appName });
                }
            });


            // Keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                // Ctrl/Cmd + K to focus search
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                    e.preventDefault();
                    searchInput.focus();
                }
                // Escape to clear search
                if (e.key === 'Escape') {
                    searchInput.value = '';
                    handleSearch('');
                }
            });
        }

        // ============================================================================
        // Search Functionality
        // ============================================================================

        function handleSearch(query) {
            const searchTerm = query.toLowerCase().trim();
            
            const activeCategory = document.querySelector('.category-btn.active').dataset.category;
            filterByCategory(activeCategory, searchTerm);

            console.log(`üîç Search: "${query}"`);
        }

        // ============================================================================
        // Category Filtering
        // ============================================================================

        function handleCategoryClick(btn) {
            // Update active button
            document.querySelectorAll('.category-btn').forEach(b => {
                b.classList.remove('active');
            });
            btn.classList.add('active');

            // Clear search
            document.getElementById('search').value = '';

            // Filter apps
            const category = btn.dataset.category;
            filterByCategory(category);

            console.log(`üìÇ Category selected: ${category}`);
        }

        function filterByCategory(category, searchTerm = '') {
            let visibleCount = 0;

            allApps.forEach((card, index) => {
                const appData = allAppsData[index];
                const cardCategory = appData.category;
                
                const categoryMatch = category === 'all' || cardCategory === category;

                let searchMatch = true;
                if (searchTerm) {
                    const name = (appData[`name-${currentLang}`] || appData.name).toLowerCase();
                    const description = (appData[`description-${currentLang}`] || appData.description).toLowerCase();
                    const keywords = (appData[`keywords-${currentLang}`] || appData.keywords).toLowerCase();
                    
                    searchMatch = 
                        name.includes(searchTerm) || 
                        description.includes(searchTerm) ||
                        keywords.includes(searchTerm);
                }

                if (categoryMatch && searchMatch) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Update stats
            document.getElementById('visible-apps').textContent = visibleCount;

            // Show/hide empty state
            toggleEmptyState(visibleCount === 0);
        }

        // ============================================================================
        // Statistics
        // ============================================================================

        function updateStats() {
            const totalApps = allApps.length;
            const visibleApps = allApps.filter(card => card.style.display !== 'none').length;

            document.getElementById('total-apps').textContent = totalApps;
            document.getElementById('visible-apps').textContent = visibleApps;
        }

        // ============================================================================
        // Install Status Detection
        // ============================================================================

        async function checkInstalledApps() {
            if (!('getInstalledRelatedApps' in navigator)) {
                console.log('‚ÑπÔ∏è Install detection not supported');
                return;
            }

            try {
                const relatedApps = await navigator.getInstalledRelatedApps();
                let installedCount = 0;

                allApps.forEach(card => {
                    const appUrl = card.getAttribute('href');
                    const badge = card.querySelector('[data-install-status]');
                    
                    const isInstalled = relatedApps.some(app => app.url && app.url.includes(appUrl));

                    if (isInstalled && badge) {
                        badge.textContent = translations[currentLang].installedBadge;
                        badge.classList.add('installed');
                        installedCount++;
                    } else if (badge) {
                        badge.textContent = translations[currentLang].installAvailable;
                        badge.classList.remove('installed');
                    }
                });

                document.getElementById('installed-apps').textContent = installedCount;
                console.log(`‚úÖ Detected ${installedCount} installed apps`);

            } catch (error) {
                console.log('‚ÑπÔ∏è Could not detect installed apps:', error.message);
            }
        }

        // ============================================================================
        // Empty State
        // ============================================================================

        function toggleEmptyState(show) {
            const emptyState = document.getElementById('empty-state');
            const appsGrid = document.getElementById('apps-grid');

            if (show) {
                emptyState.classList.add('show');
                appsGrid.style.display = 'none';
            } else {
                emptyState.classList.remove('show');
                appsGrid.style.display = 'grid';
            }
        }

        // ============================================================================
        // Animations
        // ============================================================================

        function animateOnScroll() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1
            });

            allApps.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                observer.observe(card);
            });
        }

        // ============================================================================
        // Utility Functions
        // ============================================================================

        function showAbout() {
            const t = translations[currentLang];
            alert(
                `${t.aboutPwasTitle}\n\n` +
                `${t.aboutPwasBenefits}\n` +
                `${t.aboutPwasBenefit1}\n` +
                `${t.aboutPwasBenefit2}\n` +
                `${t.aboutPwasBenefit3}\n` +
                `${t.aboutPwasBenefit4}\n` +
                `${t.aboutPwasBenefit5}\n` +
                `${t.aboutPwasBenefit6}\n\n` +
                `${t.aboutPwasHowToInstall}\n` +
                `${t.aboutPwasHowToInstall1}\n` +
                `${t.aboutPwasHowToInstall2}\n` +
                `${t.aboutPwasHowToInstall3}`
            );
        }

        async function shareCollection() {
            const t = translations[currentLang];
            const shareData = {
                title: t.title,
                text: t.subtitle,
                url: window.location.href
            };

            if (navigator.share) {
                try {
                    await navigator.share(shareData);
                    console.log('‚úÖ Shared successfully');
                } catch (error) {
                    console.log('‚ÑπÔ∏è Share cancelled');
                }
            } else {
                // Fallback: Copy to clipboard
                navigator.clipboard.writeText(window.location.href);
                alert('‚úÖ Link copied to clipboard!');
            }
        }

        function trackEvent(eventName, data) {
            // Integrate with your analytics here
            console.log(`üìä Event: ${eventName}`, data);
            
            // Example: Google Analytics
            if (typeof gtag !== 'undefined') {
                gtag('event', eventName, data);
            }
        }

        // ============================================================================
        // Performance Monitoring
        // ============================================================================

        window.addEventListener('load', () => {
            // Log performance metrics
            if (window.performance && window.performance.timing) {
                const perfData = window.performance.timing;
                const loadTime = perfData.loadEventEnd - perfData.navigationStart;
                console.log(`‚ö° Page loaded in ${loadTime}ms`);
            }
        });

        // ============================================================================
        // Service Worker (for the landing page itself - optional)
        // ============================================================================

        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Uncomment if you want the landing page itself to be a PWA
                // navigator.serviceWorker.register('/sw.js')
                //     .then(reg => console.log('‚úÖ Landing page SW registered'))
                //     .catch(err => console.log('‚ùå SW registration failed:', err));
            });
        }

        // ============================================================================
        // Console Welcome Message
        // ============================================================================

        console.log('%cüì± PWA Apps Collection', 'font-size: 24px; font-weight: bold; color: #667eea;');
        console.log('%c‚ú® All apps are Progressive Web Apps', 'font-size: 14px; color: #764ba2;');
        console.log('%cInstall any app to use it offline!', 'font-size: 12px; color: #666;');
        console.log('%cKeyboard shortcuts:', 'font-size: 12px; font-weight: bold; color: #333; margin-top: 10px;');
        console.log('  Ctrl/Cmd + K: Focus search');
        console.log('  Escape: Clear search');

    </script>

    <script>
        // --- PASSWORD PROTECTION & KEY RECONSTRUCTION ---

        // Truncated keys, with the last 2 characters removed.
        const TRUNC_DEV_KEY = 'AIzaSyCNZ-KXs7iX45AlhpqLKhFsmC_Ym6iD0';
        const TRUNC_BIN_ID = '6954ed8343b1c97be9101e';
        const TRUNC_MASTER_KEY = '$2a$10$8c.vLWaiWSjGjO.7VVjhb.339iJIfHzDC72HBTVz.cjQSMyotEL';

        let DEVELOPER_KEY, BIN_ID, MASTER_KEY, BIN_URL;
        let isInitialAuthAttempt = false; // Flag for special error handling on first load

        const passwordOverlay = document.getElementById('password-overlay');
        const passwordModal = document.getElementById('password-modal');
        const passwordForm = document.getElementById('password-form');
        const passwordInput = document.getElementById('password-input');
        const passwordError = document.getElementById('password-error');

        function initializeApp(password) {
            passwordError.style.display = 'none'; // Hide previous errors

            if (!password || password.length !== 6) {
                passwordError.textContent = 'Password must be 6 characters long.';
                passwordError.style.display = 'block';
                passwordModal.classList.add('shake');
                setTimeout(() => passwordModal.classList.remove('shake'), 500);
                return;
            }

            try {
                // Reconstruct keys from truncated versions and password parts
                DEVELOPER_KEY = TRUNC_DEV_KEY + password.substring(0, 2);
                BIN_ID = TRUNC_BIN_ID + password.substring(2, 4);
                MASTER_KEY = TRUNC_MASTER_KEY + password.substring(4, 6);
                BIN_URL = `https://api.jsonbin.io/v3/b/${BIN_ID}`;

                isInitialAuthAttempt = true; 
                sessionStorage.setItem('savedPassword', password);

                // Unlock UI
                document.body.classList.remove('locked');
                passwordOverlay.style.opacity = '0';
                setTimeout(() => passwordOverlay.style.display = 'none', 300);

                // Start the main application logic
                populateCategories();

            } catch (e) {
                passwordError.textContent = 'An unexpected error occurred during initialization.';
                passwordError.style.display = 'block';
                console.error(e);
            }
        }

        passwordForm.addEventListener('submit', (e) => {
            e.preventDefault();
            initializeApp(passwordInput.value);
        });

        function handleInitialAuth() {
            const savedPassword = sessionStorage.getItem('savedPassword');
            if (savedPassword) {
                initializeApp(savedPassword);
            }
        }

        // --- ORIGINAL APPLICATION SCRIPT (with modified error handling) ---

        async function fetchVideosFromBin() {
            const response = await fetch(BIN_URL, {
                headers: {
                    'X-Master-Key': MASTER_KEY
                }
            });
            if (!response.ok) {
                // This is where a wrong password will likely cause an error
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            const data = await response.json();
            return data.record;
        }

        async function updateVideosInBin(videos) {
            const response = await fetch(BIN_URL, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Master-Key': MASTER_KEY
                },
                body: JSON.stringify(videos)
            });
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return await response.json();
        }

        const searchForm = document.getElementById('search-form');
        const resultsContainer = document.getElementById('results-container');
        const downloadContainer = document.getElementById('download-container');
        const filterToggle = document.getElementById('filter-toggle');
        const advancedFilters = document.getElementById('advanced-filters');
        const toggleMergeBtn = document.getElementById('toggle-merge');
        const binRecordCountDisplay = document.getElementById('bin-record-count-display');
        const editFileInfo = document.getElementById('edit-file-info');
        const editStats = document.getElementById('edit-stats');
        const tableSection = document.getElementById('table-section');
        const dataTableBody = document.getElementById('data-table-body');
        const selectAllCheckbox = document.getElementById('select-all');
        const deleteSelectedBtn = document.getElementById('delete-selected');
        const updateOriginBtn = document.getElementById('update-origin');
        const totalRecordsSpan = document.getElementById('total-records');
        const selectedRecordsSpan = document.getElementById('selected-records');
        const editMessageContainer = document.getElementById('edit-message-container');
        const clearEditBtn = document.getElementById('clear-edit');

        let currentVideos = [];
        let existingData = null;
        let mergedData = null;
        let selectedFileName = '';
        let editData = [];
        let editFileName = '';

        async function populateCategories() {
            try {
                const videos = await fetchVideosFromBin();
                existingData = videos;
                isInitialAuthAttempt = false; // Success, so we disable the special error handling

                if (binRecordCountDisplay) {
                    binRecordCountDisplay.textContent = (existingData || []).length;
                }

                const categories = [...new Set((videos || []).map(video => video.category))].filter(Boolean);
                const categoryDropdown = document.getElementById('category');
                categoryDropdown.innerHTML = '<option value="">Select a category</option>';
                categories.forEach(category => {
                    const option = document.createElement('option');
                    option.value = category;
                    option.textContent = category;
                    categoryDropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error fetching or parsing videos from bin:', error);
                
                if (isInitialAuthAttempt) {
                    sessionStorage.removeItem('savedPassword');
                    document.body.classList.add('locked');
                    passwordOverlay.style.display = 'flex';
                    passwordOverlay.style.opacity = '1';
                    passwordInput.value = '';
                    passwordError.textContent = 'Authentication failed. The password may be incorrect.';
                    passwordError.style.display = 'block';
                    passwordModal.classList.add('shake');
                    setTimeout(() => passwordModal.classList.remove('shake'), 500);
                } else {
                    resultsContainer.innerHTML = `<p class="error">Error loading video data from the cloud. Please check your connection or API keys.</p>`;
                }
                
                if (editFileInfo) {
                    editFileInfo.style.display = 'block';
                    editFileInfo.className = 'file-info error';
                    editFileInfo.textContent = `Error loading videos from bin.`;
                }
                isInitialAuthAttempt = false; // Reset the flag
            }
        }

        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', function() {
                const targetTab = this.getAttribute('data-tab');
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                document.getElementById(targetTab).classList.add('active');
                if (targetTab === 'search-tab' && currentVideos.length > 0) {
                    downloadContainer.classList.add('show');
                } else {
                    downloadContainer.classList.remove('show');
                }
            });
        });

        filterToggle.addEventListener('click', function() {
            advancedFilters.classList.toggle('show');
            this.style.background = advancedFilters.classList.contains('show') ? 'var(--surface-light)' : 'transparent';
        });
        if (advancedFilters.classList.contains('show')) {
            filterToggle.style.background = 'var(--surface-light)';
        }

        toggleMergeBtn.addEventListener('click', async function() {
            if (currentVideos.length === 0) {
                alert('Please perform a search before attempting to merge.');
                return;
            }
            const query = document.getElementById('query').value;
            const category = document.getElementById('category').value;
            const newVideos = currentVideos.map(video => ({
                title: video.snippet.title,
                video_id: video.id.videoId,
                url: `https://www.youtube.com/watch?v=${video.id.videoId}`,
                publishedAt: video.snippet.publishedAt,
                channelId: video.snippet.channelId,
                description: video.snippet.description,
                channelTitle: video.snippet.channelTitle,
                liveBroadcastContent: video.snippet.liveBroadcastContent,
                thumbnail_default_url: video.snippet.thumbnails.default.url,
                category: category || query
            }));
            const localExistingData = Array.isArray(existingData) ? existingData : [];
            const videoMap = new Map();
            localExistingData.forEach(video => videoMap.set(video.video_id, video));
            newVideos.forEach(video => videoMap.set(video.video_id, video));
            const finalMergedData = Array.from(videoMap.values());
            const confirmUpdate = confirm(`This will merge ${newVideos.length} new record(s) with the cloud data using the 'keep new' strategy and update the bin. The new total will be ${finalMergedData.length} records.\n\nAre you sure?`);
            if (!confirmUpdate) return;
            const mergeButton = this;
            mergeButton.disabled = true;
            mergeButton.textContent = 'MERGING...';
            try {
                await updateVideosInBin(finalMergedData);
                existingData = finalMergedData;
                await populateCategories();
                alert('Successfully merged and updated the cloud bin!');
            } catch (error) {
                alert(`Error updating bin: ${error.message}`);
            } finally {
                mergeButton.disabled = false;
                mergeButton.textContent = 'üìé Merge & override existing file';
            }
        });

        searchForm.addEventListener('submit', async function(event) {
            event.preventDefault();
            if (!DEVELOPER_KEY) {
                resultsContainer.innerHTML = `<p class="error">Error: API Keys are not loaded. Please re-authenticate.</p>`;
                return;
            }
            const query = document.getElementById('query').value;
            const requestedMaxResults = parseInt(document.getElementById('max_results').value, 10);
            const order = document.getElementById('order').value;
            const publishedAfter = document.getElementById('published_after').value;
            const videoDuration = document.getElementById('video_duration').value;
            resultsContainer.innerHTML = '<div class="loading"><div class="loading-spinner"></div><p>Searching for new videos...</p></div>';
            downloadContainer.classList.remove('show');
            const existingVideoIds = new Set((existingData || []).map(v => v.video_id));
            let newlyFoundVideos = [];
            let nextPageToken = null;
            let pagesFetched = 0;
            const MAX_PAGES_TO_FETCH = 5;
            try {
                while (newlyFoundVideos.length < requestedMaxResults && pagesFetched < MAX_PAGES_TO_FETCH) {
                    const api_url = `https://www.googleapis.com/youtube/v3/search`;
                    const params = new URLSearchParams({
                        part: 'snippet',
                        q: query,
                        type: 'video',
                        maxResults: 50,
                        order: order,
                        key: DEVELOPER_KEY
                    });
                    if (publishedAfter) {
                        params.append('publishedAfter', new Date(publishedAfter).toISOString());
                    }
                    if (videoDuration && videoDuration !== 'any') {
                        params.append('videoDuration', videoDuration);
                    }
                    if (nextPageToken) {
                        params.append('pageToken', nextPageToken);
                    }
                    const response = await fetch(`${api_url}?${params}`);
                    const data = await response.json();
                    if (response.status !== 200) {
                        throw new Error(data.error.message || 'An unknown error occurred.');
                    }
                    if (data.items) {
                        const freshVideos = data.items.filter(video => !existingVideoIds.has(video.id.videoId));
                        freshVideos.forEach(video => {
                            if (!newlyFoundVideos.some(found => found.id.videoId === video.id.videoId)) {
                                newlyFoundVideos.push(video);
                            }
                        });
                    }
                    pagesFetched++;
                    nextPageToken = data.nextPageToken;
                    if (!nextPageToken) {
                        break;
                    }
                }
                const finalVideos = newlyFoundVideos.slice(0, requestedMaxResults);
                displayResults(finalVideos);
            } catch (error) {
                resultsContainer.innerHTML = `<p class="error">Error: ${error.message}</p>`;
                console.error('API Error:', error);
            }
        });

        function displayResults(videos) {
            if (!videos || videos.length === 0) {
                resultsContainer.innerHTML = '<div class="no-results"><p>No new results found. Try different search terms or adjust filters.</p></div>';
                downloadContainer.classList.remove('show');
                return;
            }
            currentVideos = videos;
            resultsContainer.innerHTML = '';
            const infoDiv = document.createElement('div');
            infoDiv.className = 'results-info';
            infoDiv.innerHTML = `Found <strong>${videos.length}</strong> new videos.`;
            resultsContainer.appendChild(infoDiv);
            videos.forEach(video => {
                const videoId = video.id.videoId;
                const snippet = video.snippet;
                const videoElement = document.createElement('div');
                videoElement.className = 'video';
                videoElement.innerHTML = `
                    <div class="video-thumb">
                        <a href="https://www.youtube.com/watch?v=${videoId}" target="_blank" rel="noopener">
                            <img src="${snippet.thumbnails.medium?.url || snippet.thumbnails.default.url}" 
                                 alt="${snippet.title}" 
                                 loading="lazy">
                        </a>
                    </div>
                    <div class="video-details">
                        <div class="video-title">
                            <a href="https://www.youtube.com/watch?v=${videoId}" target="_blank" rel="noopener">
                                ${snippet.title}
                            </a>
                        </div>
                        <div class="video-channel">${snippet.channelTitle}</div>
                    </div>
                `;
                resultsContainer.appendChild(videoElement);
            });
            downloadContainer.classList.add('show');
        }

        document.getElementById('download-json').addEventListener('click', downloadJSON);
        document.getElementById('download-csv').addEventListener('click', downloadCSV);

        function triggerDownload(filename, blob) {
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function downloadJSON() {
            const query = document.getElementById('query').value;
            const category = document.getElementById('category').value;
            const formattedVideos = currentVideos.map(video => ({
                title: video.snippet.title,
                video_id: video.id.videoId,
                url: `https://www.youtube.com/watch?v=${video.id.videoId}`,
                publishedAt: video.snippet.publishedAt,
                channelId: video.snippet.channelId,
                description: video.snippet.description,
                channelTitle: video.snippet.channelTitle,
                liveBroadcastContent: video.snippet.liveBroadcastContent,
                thumbnail_default_url: video.snippet.thumbnails.default.url,
                category: category || query
            }));
            const filename = query.replace(/\s+/g, '_') || 'videos';
            const blob = new Blob([JSON.stringify(formattedVideos, null, 4)], { type: 'application/json' });
            triggerDownload(`${filename}.json`, blob);
        }

        function downloadCSV() {
            const query = document.getElementById('query').value.replace(/\s+/g, '_') || 'videos';
            const headers = ['title', 'video_id', 'url', 'publishedAt', 'channelId', 'description', 'channelTitle', 'liveBroadcastContent', 'thumbnail_default_url'];
            const csvRows = [headers.join(',')];
            const escapeCsvField = (field) => {
                if (field === null || field === undefined) return '';
                const str = String(field);
                if (str.includes(',') || str.includes('"') || str.includes('\n')) {
                    return `"${str.replace(/"/g, '""')}"`;
                }
                return str;
            };
            currentVideos.forEach(video => {
                const videoId = video.id.videoId;
                const snippet = video.snippet;
                const url = `https://www.youtube.com/watch?v=${videoId}`;
                const row = [
                    escapeCsvField(snippet.title),
                    videoId,
                    url,
                    snippet.publishedAt,
                    snippet.channelId,
                    escapeCsvField(snippet.description),
                    escapeCsvField(snippet.channelTitle),
                    snippet.liveBroadcastContent,
                    snippet.thumbnails.default.url
                ];
                csvRows.push(row.join(','));
            });
            const blob = new Blob([csvRows.join('\n')], { type: 'text/csv;charset=utf-8;' });
            triggerDownload(`${query}.csv`, blob);
        }

        document.querySelector('.tab-button[data-tab="edit-tab"]').addEventListener('click', function() {
            if (existingData) {
                editData = JSON.parse(JSON.stringify(existingData));
                editFileName = 'videos.json';
                editFileInfo.style.display = 'block';
                editFileInfo.className = 'file-info loaded';
                editFileInfo.textContent = `‚úì Loaded ${editData.length} records from the cloud bin.`;
                renderEditTable();
                editStats.style.display = 'flex';
                tableSection.style.display = 'block';
                updateOriginBtn.disabled = false;
            } else {
                showEditMessage('Could not load data from the cloud. Please check the connection and refresh.', 'error');
                resetEditTab();
            }
        });

        function renderEditTable() {
            dataTableBody.innerHTML = '';
            editData.forEach((record, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>
                        <input type="checkbox" class="row-checkbox" data-index="${index}">
                    </td>
                    <td class="title-cell">${escapeHtml(record.title || 'N/A')}</td>
                    <td class="description-cell">${escapeHtml(record.description || 'N/A')}</td>
                `;
                dataTableBody.appendChild(row);
            });
            updateStats();
            attachCheckboxListeners();
        }

        function attachCheckboxListeners() {
            document.querySelectorAll('.row-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', updateStats);
            });
        }

        selectAllCheckbox.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.row-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateStats();
        });

        function updateStats() {
            const totalRecords = editData.length;
            const selectedCount = document.querySelectorAll('.row-checkbox:checked').length;
            totalRecordsSpan.textContent = totalRecords;
            selectedRecordsSpan.textContent = selectedCount;
            deleteSelectedBtn.disabled = selectedCount === 0;
            const allCheckboxes = document.querySelectorAll('.row-checkbox');
            const checkedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            selectAllCheckbox.checked = allCheckboxes.length > 0 && allCheckboxes.length === checkedCheckboxes.length;
            selectAllCheckbox.indeterminate = checkedCheckboxes.length > 0 && checkedCheckboxes.length < allCheckboxes.length;
        }

        deleteSelectedBtn.addEventListener('click', function() {
            const selectedIndices = Array.from(document.querySelectorAll('.row-checkbox:checked'))
                .map(cb => parseInt(cb.getAttribute('data-index')));
            if (selectedIndices.length === 0) return;
            const confirmDelete = confirm(`Are you sure you want to delete ${selectedIndices.length} record(s)?`);
            if (!confirmDelete) return;
            selectedIndices.sort((a, b) => b - a).forEach(index => {
                editData.splice(index, 1);
            });
            renderEditTable();
            selectAllCheckbox.checked = false;
            showEditMessage(`Successfully deleted ${selectedIndices.length} record(s)`, 'success');
        });

        updateOriginBtn.addEventListener('click', async function() {
            if (editData.length === 0) {
                showEditMessage('No data to save. The bin would be empty.', 'error');
                return;
            }
            const confirmUpdate = confirm(`This will override the cloud bin with ${editData.length} record(s).\n\nAre you sure you want to continue?`);
            if (!confirmUpdate) return;
            this.disabled = true;
            this.textContent = 'UPDATING BIN...';
            try {
                await updateVideosInBin(editData);
                existingData = JSON.parse(JSON.stringify(editData));
                await populateCategories();
                showEditMessage(`Cloud bin updated successfully!`, 'success');
            } catch (error) {
                showEditMessage(`Error updating bin: ${error.message}`, 'error');
            } finally {
                this.disabled = false;
                this.innerHTML = `
                    <svg viewBox="0 0 24 24" width="20" height="20">
                        <path fill="currentColor" d="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2z"/>
                    </svg>
                    Update Cloud Bin
                `;
            }
        });

        clearEditBtn.addEventListener('click', function() {
            const confirmClear = confirm('Are you sure you want to clear all data and reset the Edit tab?');
            if (!confirmClear) return;
            // editFileInput.value = ''; // This element was removed
            editFileInfo.style.display = 'none';
            resetEditTab();
            showEditMessage('Edit tab has been cleared successfully!', 'success');
        });

        function resetEditTab() {
            editData = [];
            editFileName = '';
            dataTableBody.innerHTML = '';
            editStats.style.display = 'none';
            tableSection.style.display = 'none';
            updateOriginBtn.disabled = true;
            selectAllCheckbox.checked = false;
        }

        function showEditMessage(message, type) {
            editMessageContainer.innerHTML = `<p class="${type}">${message}</p>`;
            setTimeout(() => {
                editMessageContainer.innerHTML = '';
            }, 5000);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Run authentication check on page load
        handleInitialAuth();
    </script>
</body>
</html>